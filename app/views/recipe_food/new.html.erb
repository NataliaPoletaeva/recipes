<h2>Add Ingredient</h2>
<% if @foods.present? %>
    <%= form_with(model: @recipe_food, url: recipe_recipe_food_index_path) do |form| %>
    <% if @recipe_food.errors.any? %>
        <div style="color: red">
        <h2><%= pluralize(@recipe_food.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
            <% @recipe_food.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <%= form.select :food_id, @foods.map { |food| [food.name, food.id] }, {}, { class: "m-3"} %>
    <%= form.number_field :quantity, placeholder: 'Quantity', min: 0, required: true, class: "m-3" %>
    <%= form.submit "Add ingredient", class: 'btn btn-dark' %>
    <% end %>
<% else %>
    <p class="font-bold mb-10">No food available for <%= current_user.name %>. Head over to <%= link_to "foods page", foods_path, class: 'underline' %> to add new food</p>
<% end %>

<br>

<div>
  <%= link_to "Back to recipes", recipes_path %>
</div>