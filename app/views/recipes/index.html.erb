<div class="d-flex justify-content-between">
<h2 class="mx-3">Recipes</h2>
<%= link_to "New recipe", new_recipe_path, class: 'btn btn-dark' %>
</div>
<%if request.fullpath == '/public_recipes'%>
  <div>
    <% @public_recipes.each do |recipe| %>
      <%= link_to recipe, class:"link" do%>
        <%= render partial: "shared/recipe_index", locals: {recipe: recipe} %>
      <% end %>
    <% end %>
  </div>
<%else%>
  <div>
    <% @recipes.each do |recipe| %>
      <%= link_to recipe, class:"link" do%>
        <%= render partial: "shared/recipe_index", locals: {recipe: recipe} %>
      <% end %>
    <% end %>
  </div>
<%end%>



