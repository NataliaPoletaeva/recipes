<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Recipe name", class: "form-control" %>
  </div>

  <div class='mb-3'>
    <%= form.label :preparation_time %>
    <%= form.number_field :preparation_time, step: :any,  placeholder: "preparation time in hours  ex: 0.5", class: "form-control"  %>
  </div>

  <div class='mb-3'>
    <%= form.label :cooking_time %>
    <%= form.number_field :cooking_time, step: :any,  placeholder: "cooking time in hours ex: 1 ", class: "form-control" %>
  </div>

  <div class='mb-3'>
    <%= form.label :description %>
    <%= form.text_area :description, size: "50x10", placeholder: "Description", class: "form-control" %>
  </div>

  <div class='mb-3'>
    <%= form.label :public%>
    <%= form.check_box :public%>
  </div>

  <div class='mb-3'>
    <%= form.submit "Add Recipe", class: 'btn btn-dark' %>
  </div>
<% end %>
